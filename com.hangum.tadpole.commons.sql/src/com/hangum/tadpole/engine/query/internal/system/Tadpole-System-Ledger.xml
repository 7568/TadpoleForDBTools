<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Tadpole-System-Ledger">


<!-- 
	template insert
 -->
<insert id="insert_ledger" parameterClass="com.hangum.tadpole.engine.query.dao.system.ledger.LedgerDAO">
	INSERT INTO ledger_head (user_seq, cp_seq, comment, request_query) 
	VALUES (#user_seq#, #cp_seq#, #comment#, #request_query#);
	
	<selectKey resultClass="java.lang.Integer">
		SELECT max(seq) seq
		FROM ledger_head 
		WHERE user_seq = #user_seq# 
	</selectKey>
</insert>


</sqlMap>